<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderDetailsActivity">

    <View
        android:id="@+id/top_view2"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/bg_view" />
    <View
        android:id="@+id/top_view"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/bg_view2" />
    <TextView
        android:id="@+id/Order_Details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order\nDetails"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="20dp"
        android:textFontWeight="@android:integer/config_mediumAnimTime"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/OrderNumber"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="Order No. :"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:layout_marginLeft="133dp"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:paddingTop="3dp"/>




    <TableLayout
        android:id="@+id/data_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#E0E0E0"
        android:layout_marginTop="16dp"
        android:layout_below="@id/top_view2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CCCCCC">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:padding="8dp"
                android:text="Item"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textStyle="bold"
                android:padding="8dp"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="18dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Item cut"
                android:textStyle="bold"
                android:padding="8dp"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="18dp"/>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/add_row_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/data_table"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Button"
        android:textColor="#FFFFFF"
        android:background="#4CAF50"
        android:padding="12dp"
        android:textSize="16sp"
        android:elevation="4dp" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/black"/>


</RelativeLayout>
